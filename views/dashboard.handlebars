{{> header }}

<h1>Dashboard</h1>
<section class="user-posts">
  {{#if posts.length}}
    {{#each posts as |post|}}
      <div class="post">
        <h3>{{post.title}}</h3>
        <p>{{post.content}}</p>
        <div>Posted on {{formatDate post.createdAt}}</div>
        <a href="/posts/{{post.id}}/edit">Edit</a>
        <form action="/api/posts/{{post.id}}?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </div>
    {{/each}}
  {{else}}
    <p>You have not posted any blogs yet.</p>
  {{/if}}
</section>
<a href="/posts/new">Create New Post</a>

{{> footer }}
